extends ../layout

block content
	.container
		.row
			each item in movies
				.col-md-2
					.thumbnail
						a(href="/list/detail/#{item._id}")
							img(src="#{item.poster}", alt="#{item.title}")
						.caption
							h3 #{item.title}
							p: a.btn.btn-primary(href="/list/detail/#{item._id}", role="button")
								观看预告片
		.row
			a.btn.btn-default(href="/admin/update/") 录入
